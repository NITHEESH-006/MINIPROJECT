<section class="" style="padding-top: 150px;padding-bottom:100px;">
  <div class="container pt-4">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <h2 class="text-center mb-4">Add Exclusive Content</h2>
        <form action="/add-exclusive" method="POST" enctype="multipart/form-data">
          
          <div class="form-group mb-3">
            <label for="category" class="form-label">Category</label>
            <select name="category" id="category" class="form-select" required onchange="toggleFormFields()">
              <option value="video">Video</option>
              <option value="article">Article</option>
            </select>
          </div>

          <div class="form-group mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="title" class="form-control" required />
          </div>

          <div class="form-group mb-3">
            <label for="author" class="form-label">Author</label>
            <input type="text" id="author" name="author" class="form-control" required />
          </div>

          <div class="form-group mb-3">
            <label for="date" class="form-label">Date</label>
            <input type="date" id="date" name="date" class="form-control" required />
          </div>

          <!-- Article Fields -->
          <div id="articleFields">
            <div class="form-group mb-3">
              <label for="image" class="form-label">Image</label>
              <input type="file" id="image" name="image" class="form-control" />
            </div>

            <div class="form-group mb-4">
              <label for="description" class="form-label">Description</label>
              <textarea id="description" name="description" class="form-control" rows="4"></textarea>
            </div>
          </div>

          <!-- Video Fields -->
          <div id="videoFields" style="display: none;">
            <div class="form-group mb-3">
              <label for="video" class="form-label">Upload Video</label>
              <input type="file" id="video" name="video" accept="video/*" class="form-control" />
            </div>
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-primary w-50">Add Content</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  function toggleFormFields() {
    const category = document.getElementById('category').value;
    const articleFields = document.getElementById('articleFields');
    const videoFields = document.getElementById('videoFields');

    if (category === 'article') {
      articleFields.style.display = 'block';
      videoFields.style.display = 'none';
    } else {
      articleFields.style.display = 'none';
      videoFields.style.display = 'block';
    }
  }

  // Default load
  window.onload = toggleFormFields;
</script>
