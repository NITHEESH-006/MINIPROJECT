<script>
    const text = "Welcome back Admin.....!";
        const speed = 100; // milliseconds per character
        let i = 0;

        function typeWriter() {
            if (i < text.length) {
                document.getElementById("text").innerHTML += text.charAt(i);
                i++;
                setTimeout(typeWriter, speed);
            }
        }

        window.onload = typeWriter;
</script>

