<section style="background-color: #1a1a1a; width: 100%; padding-top: 150px; padding-bottom: 50px;">
  <div class="container">
    <h2 class="text-center text-white mb-5">EXCLUSIVE CONTENTS</h2>

    <h4 class="text-white mb-4">Exclusive Videos</h4>
    {{#each excv}}
    
    <div class="row">
      <div class="col-12 col-sm-6 col-md-4 mb-4">
        <div class="card h-100 p-3">
          <video controls style="height: 200px; width: 100%;">
            <source src="/videos/{{this._id}}.mp4" type="video/mp4">
            Your browser does not support the video tag.
          </video>
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="text-muted">{{this.author}} | {{this.date}}</p>
          </div>
          <a href="/delete-excvideo/{{this._id}}" class="btn btn-danger" 
          onclick="return confirm('ARE YOU WANT TO DELETE {{this.title}}?')">DELETE</a>
           </div>
        </div>
        
      </div>
    
    {{/each}}

    <h4 class="text-white mt-5 mb-4">Exclusive Articles</h4>
    {{#each exca}}
    
    <div class="row">
      <div class="col-12 col-sm-6 col-md-4 mb-4">
        <a href="/excarticle/{{this._id}}" style="text-decoration: none;">
        <div class="card h-100 p-3">
          <img src="/images/{{this._id}}.jpg" class="card-img-top" style="height: 200px;" alt="{{this.title}}">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="text-muted">{{this.author}} | {{this.date}}</p>
            
          </div>
        </div>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
  </div>
</section>
